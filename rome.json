{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noBlankTarget": "off",
				"useButtonType": "off",
				"noSvgWithoutTitle": "off"
			}
		}
	},
	"formatter": {
		"indentStyle": "space",
		"indentSize": 2,
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingComma": "none"
		}
	}
}